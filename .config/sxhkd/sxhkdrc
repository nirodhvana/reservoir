# Launch Firefox
super + shift + b
	firefox

# Launch Terminal file manager
super + alt + f
     st -e "source .bashrc && lf"

# Launch GUI file manager
super + shift + f
     pcmanfm

# Launch GIMP
super + shift + g
     gimp

# Launch Youtube-scraper in cli
super + alt + y
     st -e "ytfzf"

# Launch qbittorrent
super + alt + t
     notify-send qbittorrent running
     qbittorrent

# Launch ani-cli
super + alt + a
     st -e "ani-cli"

# Launch mangal
super + alt + m
     st -e "mangal"

# Shut down
super + shift + @Delete : Return
     notify-send shutting down
     st -e "sudo shutdown -h now"

# Reboot
super + shift + ctrl + @Delete : Return
     notify-send rebooting
     st -e "reboot"

# Launch Slock
#super + shift + l
#    slock

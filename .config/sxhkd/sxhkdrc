# Launch Firefox
super + shift + b
	firefox

# Launch Terminal file manager
super + shift + f
     st -e "/home/Saatwat/go/bin/lf"

# Launch GUI file manager
super + alt + f
     pcmanfm

# Launch GIMP
super + shift + g
     gimp

# Launch Youtube-scraper in cli
super + shift + y
     st -e "ytfzf"

# Launch qbittorrent
super + shift + t
     notify-send qbittorrent running
     qbittorrent

# increase volume
super + shift + k
     notify-send volume increased:10
     pamixer --increase 10

# decrease volume
super + shift + j
     notify-send volume decreased:10
     pamixer --decrease 10

# mute
super + alt + m
     notify-send Speakers Muted
     pamixer --mute

# unmute
super + alt + u
     notify-send Speakers unmuted
     pamixer --unmute

# Lauch ani-cli
super + shift + a
     st -e "ani-cli"

# Launch mangal
super + shift + m
     st -e "mangal"

# Shut down
super + shift + @Delete : Return
     notify-send shutting down
     sudo shutdown -h now

# Reboot
super + shift + ctrl + @Delete : Return
     notify-send rebooting
     reboot

# Launch Slock
#super + shift + l
#    slock

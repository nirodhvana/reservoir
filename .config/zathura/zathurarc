set sandbox none
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 5
set font 'GohuFont11NerdFontMono Regular 10'
set selection-clipboard clipboard
set completion-group-bg '1d1f21'
set default-fg '1d1f21'
set default-bg '#c5c8c6'
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map h left
map k up
map <C-k> zoom in
map <C-j> zoom out
map j down
map l right
map i recolor
map p print
map gg goto top
map G goto bottom
map q quit

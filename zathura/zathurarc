set sandbox none
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1
set selection-clipboard clipboard
set font 'garamond regular 8.5'
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map h left
map k up
map K zoom in
map J zoom out
map j down
map l right
map i recolor
map p print
map gg goto top
map G goto bottom
map q quit
